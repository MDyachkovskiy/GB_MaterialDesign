<resources >
    <!-- Base application theme. -->
    <style name="Theme.GB_MaterialDesign" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyGreyChip.GB_MaterialDesign" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@drawable/selector_my_chip_background</item>
        <item name="shapeAppearanceSmallComponent">@style/MyGreyChip.Shape.GB_MaterialDesign</item>
        <item name="android:textAppearance">@style/MyTextAppearance.AppCompat.Body2</item>
    </style>

    <style name="MyGreyChip.Shape.GB_MaterialDesign" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="MyGreyTheme.GB_MaterialDesign" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#607D8B</item>
        <item name="colorPrimaryVariant">#CFD8DC</item>
        <item name="colorOnPrimary">#212121</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#795548</item>
        <item name="colorSecondaryVariant">#607D8B</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#795548</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyTextAppearance.AppCompat.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/roboto_mono_thin</item>
        <item name="android:fontFamily">@font/roboto_mono_thin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.0178571429</item>
    </style>


</resources>